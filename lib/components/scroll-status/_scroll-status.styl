.scroll-status
  margin-top 0
  margin-bottom 0
  padding-top 0
  padding-bottom 0
  margin-left auto
  margin-right auto



.scroll-status-bubble
  background-color rgb(200, 200, 200)
  height 6px
  width 6px
  display inline-block
  border-radius 10px
  margin-right .5rem

  &.active
    background-color rgb(124, 122, 122)


.help-line
  color red
  border-color red
  position absolute
  left 0
  width 100%
  top 0
