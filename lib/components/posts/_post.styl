.post
  overflow hidden
  padding-top 3rem
  padding-bottom 3rem
  position relative

  .markdown-container
    & > h1, & > h2, & > h3
      &:first-child + p::first-letter
        font-size 3rem
        float left
        line-height 3rem
        padding-right .5rem



.post-meta
  ft-primary()
  margin-top 0

.post-category, .post-date, .post-author
  font-size .7rem

.post-category, .post-date
  text-transform uppercase

.post-author
  display block
  line-height 1

.post-footer
  position fixed

  top 100%
  left 0
  width 100%
  background-color menu-bg
  padding 0 .5rem .5rem .5rem
  z-index 10
  border-bottom 100px solid white

  .post:target &, .post.active &
    bottom -100px
    top auto


  .headline-sub
    margin 0
    padding 0
    font-weight 700
    width 100%
    margin-top .3rem
    line-height 1.3
    font-size .5rem

    @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
      font-size .8rem

.post-nav
  text-align center
