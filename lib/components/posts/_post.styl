.post
  // overflow hidden
  padding-top 3rem
  padding-bottom 3rem
  position relative

  .markdown-container
    & > h1, & > h2, & > h3
      &:first-child + p::first-letter
        first-letter-highlighting()

    & > p:first-child::first-letter
      first-letter-highlighting()

.post-meta
  ft-primary()
  margin-top 0


.post-category, .post-date, .post-author
  ft-primary()
  font-size .7rem
  font-size 3.2vw
  white-space nowrap

  +up-from-tablet()
    font-size .7rem

.post-category, .post-date
  text-transform uppercase

.post-author
  display block
  line-height 1
