.post-footer
  position fixed

  top 100%
  left 0
  width 100%
  background-color menu-bg
  padding 0 .5rem .5rem .5rem
  z-index 10
  border-bottom 100px solid white

  .post:target &, .post.active &
    bottom -100px
    top auto

  .headline-sub
    margin 0
    padding 0
    font-weight 700
    width 100%
    margin-top .3rem
    line-height 1.3
    font-size .5rem

    @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
      font-size .8rem



  &
    height 3rem

    &.active
