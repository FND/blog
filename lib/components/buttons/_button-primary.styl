btn-primary-bg = #fff
btn-primary-bg-contrast = #a890a7
btn-primary-ft = #000000
btn-primary-ft-contrast = #fff

.btn-primary
  display block
  border none
  background-color btn-primary-bg
  color btn-primary-ft
  padding .5rem
  text-align center
  font-weight 100
  text-transform uppercase
  font-family 'Montserrat', sans-serif

  &:hover
    background-color btn-primary-bg-contrast
    color btn-primary-ft-contrast
