@require "../../globals/_mqhelper"

xhero-banner-bg = pearl-black

.rlb .hero-banner-content
  background-color main-bg

.rlb .hero-banner
  background-color hero-banner-bg
  background-repeat no-repeat
  background-size cover
  background-position center center

  +up-from-tablet()
    &
      text-align center


  .brand.in-hero-banner .brand-subline
    display none

  .hero-banner-message
    padding 1rem

    .headline-sub, .headline-primary
      color pearl-white

    .hero-banner-call2action
      margin-top 2rem
      +up-from-tablet()
        &
          display inline-block
          padding .8rem 4rem

.no-js .rlb .hero-banner-page
  display: flex;
  flex-flow: column;

  .hero-banner
    order: -1;
    margin-bottom 3rem

  .brand.in-hero-banner
    display none

.js
  .brand.in-hero-banner
    +desktop()
      color #fff
      top 1rem
      left 1rem
      text-align left

      .brand-subline
        display none
        
+mq_highres()
  .js .rlb .hero-banner
      position fixed
      top 0
      right 0
      bottom 0
      left 0

      z-index -1

      .hero-banner-message
        position absolute
        left 0
        right 0
        bottom 5%

        +tablet()
          left 10%
          right 10%

        +desktop()
          left 10%
          right 10%

        .headline-primary
          font-size 3vw

          +tablet()
            font-size 5vw





.js .rlb
  // anchor-"navigation" with default fallback page inspired by
  // http://www.smashingmagazine.com/2015/12/reimagining-single-page-applications-progressive-enhancement/#the-default-view
  .hero-banner-page > *:first-child
    display none

  .hero-banner-page > *:last-child
    display block

  .hero-banner-page > *:target, .hero-banner-page > .selected-target
    display block
    animation: pulse 0.2s linear 1;

  .hero-banner-page > *:target ~ *, .hero-banner-page > .selected-target ~ *
    display none
