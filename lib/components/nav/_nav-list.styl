
.nav-list
  margin 0
  padding 3rem 0 0 0

  .js &
    position absolute
    top 0
    right 0
    bottom 0
    left 0

    overflow-y scroll



.nav-item
  line-height 1.3
  padding .5rem .5rem .5rem 1.5rem
  position relative
  border-top 1px solid #e6e6e6
  width 100%

  &.active:before
    color rgb(255, 165, 0)


  &:before
    position absolute
    left .5rem
    top 50%
    transform translateY(-50%)
    font-size .6rem

  &:last-of-type
    border-bottom 1px solid #e6e6e6


  &.impressum
    margin-top 3rem
    border-top none
    border-bottom none

    a, &:before
      color lighten(rgb(0, 0, 0), 70%)

    &:hover a, &:hover:before
      color #000


  .post-nav-meta, .post-nav-meta span
    ft-montserrat()
    margin-top .2rem
    color rgb(158, 158, 158)
    font-size .3rem
    font-weight 100
    line-height 1.1

    +up-from-tablet()
      font-size .5rem
