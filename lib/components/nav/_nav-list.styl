
.nav-list
  position absolute
  top 0
  right 0
  bottom 0
  left 0

  overflow-y scroll

  margin 0
  padding 3rem 0 0 0


.nav-item
  line-height 1.3
  padding .5rem .5rem .5rem 1.5rem
  position relative
  border-top 1px solid #e6e6e6
  width 100%

  &:before
    position absolute
    left .5rem
    top 50%
    transform translateY(-50%)
    font-size .6rem

  &:last-of-type
    border-bottom 1px solid #e6e6e6
